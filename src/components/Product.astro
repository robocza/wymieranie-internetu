---
import type {ImageMetadata} from "astro";
import SimpleLink from "./SimpleLink.astro";
import {Image} from "astro:assets";
interface Props {
    title?: string;
    description?: string;
    image: ImageMetadata;
    alt: string,
    buyLink: string;
    price: string;
}

const {
    title = await Astro.slots.render('title'),
    description = await Astro.slots.render('description'),
    image,
    alt,
    buyLink,
    price,
} = Astro.props;

---

<div class="max-w-sm">
    <Image src={image}
           alt={alt}
           class="aspect-square object-cover mb-4"
    />

    <div class="font-sans mb-8">
        <div class="flex">
            <div class="grow"><slot name="title">{title}</slot></div>
            <div>{price}</div>
        </div>
    </div>

    <div class="mb-8">
        <SimpleLink className="font-blockquote border border-dark dark:border-light text-center uppercase px-8 lg:px-16 text-xl lg:text-2xl hover:opacity-70" url={buyLink} text="KupujÄ™"/>
    </div>

    <div class="font-sans text-base mb-8">
        <slot name="description">{description}</slot>
    </div>
</div>
