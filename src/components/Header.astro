---
import LogoMVU from "../components/LogoMVU.astro";
import LogoGR from "../components/LogoGR.astro";
import ReadingPositionIndicator from "../components/ReadingPositionIndicator.astro";
import Central from "../layouts/elements/arrangement/Central.astro";

interface Link {
    text?: string;
    href?: string;
    ariaLabel?: string;
    icon?: string;
}

interface MenuLink extends Link {
    links?: Array<MenuLink>;
}

export interface Props {
    id?: string;
    links?: Array<MenuLink>;
    isSticky?: boolean;
    isDark?: boolean;
    isFullWidth?: boolean;
    position?: string;
}

---
<header class="top-0 z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-[opacity] ease-in-out fixed">
    <div class="absolute inset-0 bg-light dark:bg-dark opacity-90"></div>
    <div class="relative py-5 mx-auto w-full">
        <div class="grid grid-cols-3 px-4">
            <div class="flex items-center justify-start gap-8">
                <a target="_blank" href="https://grupa.robocza.org/">
                    <Central>
                        <LogoGR />
                    </Central>
                </a>
                <a class="flex items-center" target="_blank" href="https://mvu.pl/">
                    <Central>
                        <LogoMVU />
                    </Central>
                </a>
            </div>
            <div class="flex items-center justify-center gap-8">

            </div>
            <div class="flex items-center justify-end gap-8">
                <ReadingPositionIndicator />
            </div>
        </div>
    </div>
</header>
