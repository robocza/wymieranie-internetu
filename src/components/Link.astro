---
interface Props {
    url: string;
    text: string;
    className?: string;
    extraClassName?: string;
    icon?:string;
}

const {
    url,
    text,
    className = "font-sans text-lg font-normal text-black dark:text-white opacity-70 underline underline-offset-4 hover:opacity-90 pl-6 relative",
    extraClassName = '',
    icon = 'ðŸ”—',
} = Astro.props;

let classes;
if(icon){
    classes = className + ' before:absolute before:-left-1 before:no-underline before:content-[\'' + icon + '\']'
} else {
    classes = className;
}

---
<a class:list={[
    classes,
    extraClassName,
]} href={url}>{text}</a>
