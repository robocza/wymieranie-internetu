---
import SimpleLink from "./SimpleLink.astro";

interface Props {
    url: string;
    text: string;
    className?: string;
}

const {
    url,
    text,
    className = "font-serif font-normal text-black dark:text-white underline underline-offset-4 hover:opacity-70 pl-6 bg-left bg-no-repeat bg-[length:18px_18px] relative bg-chain",
} = Astro.props;

---
<SimpleLink
    url={url}
    text={text}
    className={className}
/>
