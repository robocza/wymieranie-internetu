---
interface Props {
    url: string;
    text: string;
    className?: string;
    extraClassName?: string;
}

const {
    url,
    text,
    className = "font-sans text-sm sm:text-base lg:text-lg font-normal text-black dark:text-white underline underline-offset-2 lg:underline-offset-4 hover:opacity-70",
    extraClassName = '',
} = Astro.props;

---
<a class:list={[
    className,
    extraClassName,
]} href={url}>{text}</a>
